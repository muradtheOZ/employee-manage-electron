{
  "compilerOptions": {
    "outDir": "./dist",               // Output directory for compiled files
    "rootDir": "./src",                // Root directory for source files
    "module": "commonjs",              // Module system compatible with Node.js and Electron
    "target": "es6",                   // ECMAScript version
    "jsx": "react",                    // For React support
    "strict": true,                    // Enable all strict type-checking options
    "esModuleInterop": true,           // Support for CommonJS and ES modules
    "skipLibCheck": true               // Skip type checking of declaration files
  },
  "include": ["src/**/*", "dist/preload.js"],             // Include all .ts and .tsx files in src
  "exclude": ["node_modules", "dist"]  // Exclude output and dependencies
}
