{
  "compilerOptions": {
    "outDir": "./dist",  // Output directory for compiled JavaScript files
    "rootDir": "./src",  // Source directory containing TypeScript files
    "target": "ES6",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
